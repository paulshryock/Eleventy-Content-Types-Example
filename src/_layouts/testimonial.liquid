---
layout: global
---
<article>
  <header>
    <h2>{{ title }}</h2>
    <p>Last updated: {{ page.date | date: "%m/%d/%Y" }}</p>
  </header>
  <blockquote class="blockquote">
    {{ content }}
  </blockquote>
</article>
<aside>
  {% if collections.testimonials %}
  <ul class="posts">
    {% for post in collections.testimonials %}
    <li class="post"><a href="{{ post.url }}">{{ post.data.title }}</a></li>
    {% endfor %}
  </ul>
  {% endif %}
</aside>